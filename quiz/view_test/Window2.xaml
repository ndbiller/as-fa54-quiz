<?xml version="1.0" encoding="utf-8"?>
<Window
	x:Class="view_test.Window2" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:view_test"
	Title="INotifyPropertyChanged"
	Height="300"
	Width="300"
	VerticalAlignment="Center"
	Loaded="Window_Loaded">
	<Grid
		x:Name="mainGrid"
		Background="{Binding Background.Color}">
		<DockPanel
			Margin="50">
			<StackPanel
				DockPanel.Dock="Top">
				<TextBlock
					Text="{Binding User.Name, StringFormat=Welcome {0}}"
					TextAlignment="Center" />
				<TextBox
					Text="{Binding User.Name, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}" />
				<Button
					x:Name="btn_submit"
					Content="Submit"
					Click="SubmitClicked" />
			</StackPanel>
		</DockPanel>
	</Grid>
</Window>