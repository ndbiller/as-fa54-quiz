<?xml version="1.0" encoding="utf-8"?>
<Page x:Class="quiz.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"	
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:quiz"
      mc:Ignorable="d"
      d:DesignWidth="800"
      d:DesignHeight="450">
    <Grid x:Name="startGrid">
        <StackPanel	VerticalAlignment="Bottom">
            <!-- here we bind the textblock text to the Property QuestionText of the elements DataContext set in Window1.xaml.cs -->
            <TextBlock x:Name="txt_question"
					   Text="{Binding QuestionText}"/>
            <!-- here we bind the buttons content to the Properties Answer1 to Answer3 of the elements DataContext set in Window1.xaml.cs -->
            <Button	x:Name="btn_answer1"
					Content="{Binding Answer1}"/>
            <Button	x:Name="btn_answer2"
					Content="{Binding Answer2}"/>
            <Button	x:Name="btn_answer3"
					Content="{Binding Answer3}"/>
        </StackPanel>
    </Grid>
</Page>